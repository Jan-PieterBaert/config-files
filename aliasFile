# editting configs
alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"
alias editi3Config="vim ~/.config/i3/config"
alias editWifiConf="sudo nvim /etc/wpa_supplicant/wpa_supplicant-wlp2s0.conf && fixWifi"

# typo aliasses
alias cls=clear
alias dir=ls -al
alias vi=vim
alias vim=nvim
alias nano=nvim

# general aliasses
alias weather="curl 'https://wttr.in'"
alias update_time="sudo ntpdate -s ntp.ugent.be"
alias serveDirectory="python3 -m http.server"
alias fuck="sudo"
alias copy="xclip -selection clipboard"
alias pptToPdf="unoconv -f pdf"
alias capsState="xset -q | grep \"Caps Lock\" | sed \"s/^.*Caps Lock: *\([onf]*\) .*$/\1/\""

#network aliasses
alias fixWifi="sudo systemctl restart wpa_supplicant@wlp2s0"
alias fixEth="sudo systemctl restart dhcpcd.service"
alias wifiStatus="watch wpa_cli -i wlp2s0 status"

#git aliasses
alias gitStatusSub="find . -maxdepth 1 -mindepth 1 -type d -exec sh -c '(echo {} && cd {} && git status && echo)' \;"
alias gpp="git pull origin && git push origin"
alias quteCommit="git commit -sS -m \"qute updates\" "
alias typoFixCommit"git commit -Ss -m \"typo fix\""

#pacman aliasses
alias search_package="yay -Ss"
alias fix_package="yay -S"
alias update_packages="yay -Syu"
alias download_updates="yay -Syuw"

# package-list backup and down
alias backdown_yay="yay -S --needed - < /fast_files/git_repos/custum_scripts/pkglist.txt"
alias backup_yay="yay -Qqe > /fast_files/git_repos/custum_scripts/pkglist.txt"
alias yay="time yay"

# bumblebee aliasses
alias startbbs="sudo systemctl start bumblebeed.service"
alias stopbbs="sudo systemctl stop bumblebeed.service"
alias statusbbs="sudo systemctl status bumblebeed.service"

# stackstorage aliasses
alias startStack="sudo mount ~/stackstorage && sudo chown jan-pieter:jan-pieter ~/stackstorage"
alias stopStack="sudo umount ~/stackstorage"

# kelder aliasses
alias kelderforward="pax11publish -e -S 10.0.0.5"
alias kelderforward="pax11publish -e -S 10.0.0.5"
alias cammie='curl http://kelder.zeus.ugent.be/webcam/video/mjpg.cgi | mpv --no-correct-pts --fps 5 -'
alias keldermuziek="ncmpcpp -h 10.0.0.5"
alias pong="ping ugent.be"
alias playOnHoek="PULSE_SERVER=10.0.0.5 "

